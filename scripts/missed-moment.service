[Unit]
Description=missed-moment service
Wants=missed-moment-audio-server.service
After=network.target missed-moment-audio-server.service

[Service]
ExecStart=/usr/bin/python3 -u missed-moment.py
WorkingDirectory=/home/pi/missed-moment
StandardOutput=inherit
StandardError=inherit
Restart=on-failure
User=pi

[Install]
WantedBy=multi-user.target